{
  // VS Code MCP Configuration for Brain Dump
  //
  // To use this configuration:
  // 1. Copy this file to .vscode/mcp.json
  // 2. Update the paths below to match your system
  // 3. Restart VS Code or reload the window
  //
  // Requirements:
  // - VS Code 1.99+ with native MCP support
  // - Node.js installed
  // - Brain Dump database initialized (run the app once)

  "servers": {
    "brain-dump": {
      // Server identifier - must be unique across all MCP servers
      "type": "stdio",

      // Command to run the MCP server
      // Use absolute path or ensure node is in PATH
      "command": "node",

      // Arguments passed to the command
      // Update this path to your brain-dump installation
      "args": [
        "/home/xtra/code/personal_projects/brain-dump/mcp-server/index.js"
      ],

      // Environment variables (optional)
      // Uncomment if you need to set custom environment
      // "env": {
      //   "NODE_ENV": "development"
      // }
    }
  },

  // Input configuration (optional)
  // Customize how MCP inputs are handled
  "inputs": []
}

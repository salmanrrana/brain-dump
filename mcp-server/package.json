{
  "name": "brain-dump-mcp",
  "version": "1.0.0",
  "description": "MCP server for Brain Dump - create and manage tickets from any project",
  "type": "module",
  "main": "dist/index.js",
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  },
  "scripts": {
    "build": "node build.mjs",
    "postinstall": "node build.mjs",
    "start": "node dist/index.js",
    "dev": "tsx watch index.ts",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^12.5.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.10.2",
    "esbuild": "^0.25.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^3.0.5"
  }
}
